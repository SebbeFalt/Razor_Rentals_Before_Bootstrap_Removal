@page
@model Razor_Rentals.Pages.Admins.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="Centered-Vertical">
    <h1 style="margin-left: 30px; color: #A72D04;">Are you sure you want to delete this admin?</h1>
    <div>
        <dl class="Fluffy-Form">
            <dt>
                <label asp-for="Admin.Name" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Admin.Name" readonly />
            </dd>
            <dt>
                <label asp-for="Admin.Email" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Admin.Email"  readonly />
            </dd>
            <dt>
                <label asp-for="Admin.Phone" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Admin.Phone" readonly />
            </dd>
            <dt>
                <label asp-for="Admin.Password" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Admin.Password" readonly value="Model.Admin.Password" />
            </dd>
        </dl>
    </div>
    <div class="Centered-Horizontal">
        <form method="post">
            <input type="hidden" asp-for="Admin.AdminId" />
            <input type="submit" value="Delete" class="Delete-Button" style="margin-left: 50px; margin-right: 10px; margin-bottom: 5px; padding-top: 8px; padding-bottom: 8px; padding-left: 30px; padding-right: 30px;" />
            <a asp-page="./Index" class="General-Button" style="margin-right: 10px;">Back to List</a>
        </form>
    </div>
</div>


