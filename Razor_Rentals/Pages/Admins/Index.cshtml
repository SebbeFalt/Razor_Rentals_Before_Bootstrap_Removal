@page
@model Razor_Rentals.Pages.Admins.IndexModel

@{
    ViewData["Title"] = "Admins";
}
<div class="Centered-Vertical">

    <h1>List of Admins</h1>

    <p style="margin-top: -10px;">
        <a asp-page="Create" class="Primary-Button">Create New</a>
    </p>
    <table class="Table-Style">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Admin[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Admin[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Admin[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Admin[0].Password)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Admin)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @* @Html.DisplayFor(modelItem => item.Password) *@
                        @foreach (var c in item.Password)
                        {
                            <span>*</span>
                        }
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.AdminId" class="Primary-Button">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.AdminId" class="General-Button">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.AdminId" class="Delete-Button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
