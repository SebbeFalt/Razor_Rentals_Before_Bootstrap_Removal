@page
@model Razor_Rentals.Pages.Admins.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="Centered-Vertical">
    <h1>Edit Admin</h1>
    <div>
        <div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="Validation-Red"></div>
                <input type="hidden" asp-for="Admin.AdminId" />
                <div class="Fluffy-Form Centered-Vertical">
                    <label asp-for="Admin.Name" class=""></label>
                    <input asp-for="Admin.Name" class="" />
                    <span asp-validation-for="Admin.Name" class="Validation-Red"></span>
                </div>
                <div class="Fluffy-Form Centered-Vertical">
                    <label asp-for="Admin.Email" class=""></label>
                    <input asp-for="Admin.Email" class="" />
                    <span asp-validation-for="Admin.Email" class="Validation-Red"></span>
                </div>
                <div class="Fluffy-Form Centered-Vertical">
                    <label asp-for="Admin.Phone" class=""></label>
                    <input asp-for="Admin.Phone" class="" />
                    <span asp-validation-for="Admin.Phone" class="Validation-Red"></span>
                </div>
                <div class="Fluffy-Form Centered-Vertical">
                    <label asp-for="Admin.Password" class=""></label>
                    <input asp-for="Admin.Password" style="margin-bottom: -15px;" />
                    <span asp-validation-for="Admin.Password" class="Validation-Red"></span>
                </div>
                <div>
                    <input type="submit" value="Save" class="Primary-Button" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index" class="General-Button" style="margin-top: 3px; margin-bottom: 3px;">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
