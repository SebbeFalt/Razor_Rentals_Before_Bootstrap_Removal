@page
@model Razor_Rentals.Pages.Cars.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="Centered-Vertical">
    <h1 style="margin-left: 40px; color: #A72D04;">Are you sure you want to delete this car?</h1>
    <div>
        <dl class="Fluffy-Form">
            <dt>
                <label asp-for="Car.Name" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Car.Name" readonly />
            </dd>
            <dt>
                <label asp-for="Car.Description" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Car.Description" readonly />
            </dd>
            <dt>
                <label asp-for="Car.Available" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Car.Available" readonly />
            </dd>
            <dt>
                <label asp-for="Car.CostPerDay" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Car.CostPerDay" readonly />
            </dd>
            <dt>
                @* @Html.DisplayNameFor(model => model.Car.ImageURL) *@
                @* <label asp-for="Car.ImageURL" style="margin-left: 30px; margin-top: 5px;"></label> *@
            </dt>
            <dd style="margin-top: 10px;">
                <img src="@Model.Car.ImageURL" alt="Car Image" style="max-width: 100px; max-height: 100px; border-radius: 4px;" />
            </dd>
        </dl>
        <div class="Centered-Horizontal">
            <form method="post">
                <input type="hidden" asp-for="Car.CarId" />
                <input type="submit" value="Delete" class="Delete-Button" style="margin-left: 50px; margin-right: 10px;" />
                <a asp-page="./Index" class="General-Button" style="margin-right: 10px;">Back to List</a>
            </form>
        </div>
    </div>
</div>
