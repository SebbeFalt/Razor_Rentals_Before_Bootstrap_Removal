@page
@model Razor_Rentals.Pages.Customers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="Centered-Vertical">
    <h1 style="margin-left: 40px; color: #A72D04;">Are you sure you want to delete this customer?</h1>
    <div>
        <dl class="Fluffy-Form">
            <dt>
                <label asp-for="Customer.Name" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Customer.Name" class="" readonly />
            </dd>
            <dt>
                <label asp-for="Customer.Email" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Customer.Email" class="" readonly />
            </dd>
            <dt>
                <label asp-for="Customer.Phone" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Customer.Phone" class="" readonly />
            </dd>
            <dt>
                <label asp-for="Customer.Password" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Customer.Password" class="" readonly value="Model.Customer.Password" />
            </dd>
        </dl>
    </div>
    <div class="Centered-Horizontal">
        <form method="post">
            <input type="hidden" asp-for="Customer.CustomerId" />
            <input type="submit" value="Delete" class="Delete-Button" style="margin-left: 50px; margin-right: 10px; margin-bottom: 5px; padding-top: 8px; padding-bottom: 8px; padding-left: 30px; padding-right: 30px;" />
            <a asp-page="./Index" class="General-Button" style="margin-right: 10px;">Back to List</a>
        </form>
    </div>
</div>
