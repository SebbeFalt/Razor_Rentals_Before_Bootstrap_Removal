@page
@model Razor_Rentals.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="Centered-Vertical">
    <h1>Edit Customer</h1>
    <div>
        <div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="Validation-Red"></div>
                <input type="hidden" asp-for="Customer.CustomerId" />
                <div class="Fluffy-Form Centered-Vertical">
                    <label asp-for="Customer.Name" ></label>
                    <input asp-for="Customer.Name" />
                    <span asp-validation-for="Customer.Name" class="Validation-Red"></span>
                </div>
                <div class="Fluffy-Form Centered-Vertical">
                    <label asp-for="Customer.Email" ></label>
                    <input asp-for="Customer.Email" />
                    <span asp-validation-for="Customer.Email" class="Validation-Red"></span>
                </div>
                <div class="Fluffy-Form Centered-Vertical">
                    <label asp-for="Customer.Phone" ></label>
                    <input asp-for="Customer.Phone" />
                    <span asp-validation-for="Customer.Phone" class="Validation-Red"></span>
                </div>
                <div class="Fluffy-Form Centered-Vertical">
                    <label asp-for="Customer.Password" ></label>
                    <input asp-for="Customer.Password"  />
                    <span asp-validation-for="Customer.Password" class="Validation-Red"></span>
                </div>
                <div>
                    <input type="submit" value="Save" class="Primary-Button" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index" class="General-Button" style="margin-top: 5px; margin-bottom: 7px;">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
