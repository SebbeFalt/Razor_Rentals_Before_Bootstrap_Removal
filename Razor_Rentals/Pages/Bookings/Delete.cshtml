@page
@model Razor_Rentals.Pages.Bookings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="Centered-Vertical">
    <h1 style="margin-left: 30px; color: #A72D04;">Are you sure you want to delete this booking?</h1>
    <div>
        <dl class="Fluffy-Form">
            <dt>
                @* <label asp-for="Booking.Customer.Name" style="margin-left: 30px; margin-top: 5px;"></label> *@
                <label style="margin-left: 30px; margin-top: 5px;">Customer</label>

            </dt>
            <dd>
                <input asp-for="Booking.Customer.Name" readonly  />
            </dd>
            <dt>
                <label asp-for="Booking.Cost" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Booking.Cost" readonly />

            </dd>
            <dt>
                <label asp-for="Booking.BookingDate" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Booking.BookingDate" readonly value="@Model.Booking.BookingDate.ToString("yyyy-MM-dd HH:mm")" />
            </dd>
            <dt>
                <label asp-for="Booking.CarPickupDate" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Booking.CarPickupDate" readonly value="@Model.Booking.CarPickupDate.ToString("yyyy-MM-dd HH:mm")"  />
            </dd>
            <dt>
                <label asp-for="Booking.CarReturnDate" style="margin-left: 30px; margin-top: 5px;"></label>
            </dt>
            <dd>
                <input asp-for="Booking.CarReturnDate" readonly value="@Model.Booking.CarPickupDate.ToString("yyyy-MM-dd HH:mm")"/>
            </dd>
           
        </dl>
        <div class="Centered-Horizontal">
            <form method="post">
                <input type="hidden" asp-for="Booking.BookingId" />
                <input type="submit" value="Delete" class="Delete-Button" style="margin-left: 50px; margin-right: 10px; margin-bottom: 5px; padding-top: 8px; padding-bottom: 8px; padding-left: 30px; padding-right: 30px;" />
                <a asp-page="./Index" class="General-Button" style="margin-right: 10px;">Back to List</a>
            </form>
        </div>

    </div>
</div>

